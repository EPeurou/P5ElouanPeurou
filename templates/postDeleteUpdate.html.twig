<!DOCTYPE html>
<html lang="en">
    <head>
        {% block stylesheets %}   
            {% include "source.html.twig" %}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
            {% include 'navbar.html.twig' %}
        {% endblock %}
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/desktop.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <div class="row">
                                <div class="col-md-2">
                                    <form action="model/deletePost.php" method="post">
                                        <input type="hidden" value="{{ idPost }}" name="iddel"/>
                                        <input type="submit" class="btn btn-danger" value="Supprimer"/>
                                    </form>
                                </div>
                                <div class="col-md-2">
                                    <a href="index.php?action=postUpdate&amp;id={{ idPost }}" class="btn btn-success">Modifier</a>
                                </div>
                            </div>
                            <h1>{{ title }}</h1>
                            <h2 class="subheading">{{ descriptionPost }}</h2>
                            <span class="meta">
                                Post√© par {{ pseudoPost }} le {{ datePost }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
        <article class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        {{ contentPost }}
                    </div>
                </div>
            </div>
        </article>
        <div class="container">
            <div class="be-comment-block">
                <h1 class="comments-title">Commentaires</h1>
                {% for rowComment in dataComment %}
                    <div class="be-comment">
                        <div class="be-img-comment">	
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="be-ava-comment">
                        </div>
                        <div class="be-comment-content">
                                <span class="be-comment-name">
                                    {{ rowComment.pseudo }}
                                </span>
                                <span class="be-comment-time">
                                    {{ rowComment.date }}
                                </span>

                            <p class="be-comment-text">
                                {{ rowComment.content }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
                <form class="form-block" action="model/insertComment.php" method="post">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <input class="form-input" type="text" placeholder="Pseudo" name="id">
                                <input type="hidden" name="idPost" value="{{ idPost }}">
                            </div>
                        </div>
                        <div class="col-xs-12">									
                            <div class="form-group">
                                <textarea class="form-input" placeholder="Commentaire" name="comment"></textarea>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary btn-submit" value="Envoyer">
                    </div>
                </form>
            </div>
        </div>
        <!-- Footer-->
        {% block footer %}   
            {% include "footer.html.twig" %}
        {% endblock %}
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
