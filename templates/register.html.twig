
<!DOCTYPE html>
<html>
    <head>
        {% block stylesheets %}   
            {% include "header.html.twig" %}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
            {% include 'navbar.html.twig' %}
        {% endblock %}
        <header class="masthead" style="background-image: url('assets/img/registration.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Inscription</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="my-5">
                            <form action="model/insertUser.php" method="post">
                                <div class="form-floating">
                                    <input class="form-control" id="name" name="name" type="text" placeholder="Nom" required="required" oninvalid="this.setCustomValidity('Un nom est requis')" oninput="this.setCustomValidity('')" />
                                    <input type="hidden" name="token" value="{{ sessionToken }}">
                                    <label for="name">Nom</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="firstName" name="firstName" type="text" placeholder="prenom" required="required" oninvalid="this.setCustomValidity('Un prenom est requis')" oninput="this.setCustomValidity('')" />
                                    <label for="firstName">Prénom</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="civility" name="civility" type="text" placeholder="M/Mme" required="required" oninvalid="this.setCustomValidity('Une civilite est requise')" oninput="this.setCustomValidity('')"/>
                                    <label for="civility">Civilité</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="email" name="email" type="email" placeholder="Email" required="required" oninvalid="this.setCustomValidity('Une adresse email est requise')" oninput="this.setCustomValidity('')"/>
                                    <label for="email">Adresse Email</label>
                                </div>
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="mot de passe" required="required" oninvalid="this.setCustomValidity('Un mot de passe est requis')" oninput="this.setCustomValidity('')"/>
                                    <label for="password">Mot de passe</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" id="pseudo" name="pseudo" type="text" placeholder="Pseudo" required="required" oninvalid="this.setCustomValidity('Un pseudo est requis')" oninput="this.setCustomValidity('')"/>
                                    <label for="pseudo">Pseudo</label>
                                </div>
                                <br/>
                                <button class="btn btn-primary" type="submit">Valider</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        {% block footer %}   
            {% include "footer.html.twig" %}
        {% endblock %}
    </body>
</html>
