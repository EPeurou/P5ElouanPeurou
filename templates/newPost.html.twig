<!DOCTYPE html>
<html lang="en">
    <head>
        {% block stylesheets %}   
            {% include "source.html.twig" %}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
            {% include 'navbar.html.twig' %}
        {% endblock %}
        <header class="masthead" style="background-image: url('assets/img/light.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Nouveau post!</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            <div class="be-comment-block">
                <form class="form-block" action="model/insertPost.php" method="post">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <input class="form-input" type="text" placeholder="Titre" name="title">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <select class="form-input" type="text" placeholder="CatÃ©gorie" name="category">
                                {% for rowCategory in varCategory %}
                                    <option value="{{ rowCategory.id}}">{{ rowCategory.name }}</option>
                                {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <textarea class="form-input" type="text" placeholder="Description" name="description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">									
                            <div class="form-group">
                                <textarea class="form-input" placeholder="Contenu" name="content"></textarea>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary btn-submit" value="Envoyer">
                    </div>
                </form>
            </div>
        </div>
        <!-- Footer-->
        {% block footer %}   
            {% include "footer.html.twig" %}
        {% endblock %}
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
